<div id="products">
  <div class="container=fluid">

    <%= render(:partial => "product-nav") %>

    <div class="row-fluid product-details">
      <div class="span6">

        <div class="main-image">
          <%= image_tag @product.image1 %>
        </div>

        <div class="sub-images">
          <img src="<%= @product.image1 %>" class="sub-image"></img>
          <img src="<%= @product.image2 %>" class="sub-image"></img>
          <img src="<%= @product.image3 %>"class="sub-image"></img>
        </div>

      </div>

      <div class="span6">
        <div class="detail-heading">
          <h3><%= @product.name %><span><h6>/ <%= @product.color %></h6></span></h3>
        </div>

        <% if @product.category == "Watches" %>

        <div class="product-buy">
          <h4 class="detail-price">$<%= @product.price %> USD<span><a href="<%= @product.shoplink %>" class="btn-large btn-primary">Buy Now<a></span></h4>
        </div>

        <div class="color-options">
          <h6>Color Options</h6>
          <div class="color-options-images">

          <% if @product.name == "The Plank" %>
            <% @plank_images.each do |image| %>
            <%= link_to image_tag(image.image1), image %>
            <% end %>

          <% elsif @product.name == "The Deck" %>
            <% @deck_images.each do |image| %>
            <%= link_to image_tag(image.image1), image %>
            <% end %>

          <% elsif @product.name == "The Drift" %>
            <% @drift_images.each do |image| %>
            <%= link_to image_tag(image.image1), image %>
            <% end %>

          <% elsif @product.name == "The Baron" %>
            <% @baron_images.each do |image| %>
            <%= link_to image_tag(image.image1), image %>
            <% end %>
          <% end %>
          </div>
        </div>

        <hr>

        <div class="specs">
          <h6>Product Details</h6>
          <ul>
            <ul>
              <li><span class="spec-icon-solid pull-left"</span></li>
              <li><h5>100% Pine With <a href="#" id="solidPop" data-trigger="click" data-toggle="popover" data-placement="top" data-content="MICA's proprietary wood science improves durability, luster and resistance to the elements. Seals and finishes your watch from the inside out." data-original-title="SolidCore™">SolidCore™</a> Treatment</h5></li>
            </ul>
            <ul>
              <li><span class="spec-icon-size pull-left"</span></li>
              <li><h5>Large Size (44mm)</h5></li>
            </ul>
            <ul>
              <li><span class="spec-icon-movement pull-left"</span></li>
              <li><h5>3 Hand Japanese Quartz</h5></li>
            </ul>
            <ul>
              <li><span class="spec-icon-crystal pull-left"</span></li>
              <li><h5>Hardened Mineral Crystal Glass</h5></li>
            </ul>
            <ul>
              <li><span class="spec-icon-atm pull-left"</span></li>
              <li><h5>5 ATM (Splash Only)</h5></li>
            </ul>
            <ul>
              <li><span class="spec-icon-ss pull-left"</span></li>
              <li><h5>Stainless Steel Buckle & Crown</h5></li>
            </ul>
          </ul>

        </div>

        <hr>

        <div class="social">
          <h6>Share</h6>
          <ul>
            <ul>
              <a href="#">
                <li><span class="social-icon-facebook pull-left"</span></li>
                <li><h5>Facebook</h5></li>
              </a>
            </ul>
            <ul>
              <a href="#">
                <li><span class="social-icon-twitter pull-left"</span></li>
                <li><h5>Twitter</h5></li>
              </a>
            </ul>
            <ul>
              <a href="">
                <li><span class="social-icon-pinterest pull-left"</span></li>
                <li><h5>Pinterest</h5></li>
              </a>
            </ul>
          </ul>
        </div>

        <% else %>

        <div class="product-buy">
          <h4 class="detail-price">$<%= @product.price %> USD
            <span>
              <% if @product.name == "The Official" %>
              <a href="#" class="btn-large btn-primary no-link">Buy Now<a>
              <a href="http://stackoverflow.com/questions/4565075/jquery-if-element-has-class-do-this-help-please" class="btn-large btn-primary small-link">Buy Now<a>
              <a href="https://mica.infusionsoft.com/app/manageCart/showManageOrder" class="btn-large btn-primary medium-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary large-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary xl-link">Buy Now<a>

              <% elsif @product.name == "The Tree" %>
              <a href="#" class="btn-large btn-primary no-link">Buy Now<a>
              <a href="http://stackoverflow.com/questions/4565075/jquery-if-element-has-class-do-this-help-please" class="btn-large btn-primary small-link">Buy Now<a>
              <a href="https://mica.infusionsoft.com/app/manageCart/showManageOrder" class="btn-large btn-primary medium-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary large-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary xl-link">Buy Now<a>

              <% elsif @product.name == "The Blitzen" %>
              <a href="#" class="btn-large btn-primary no-link">Buy Now<a>
              <a href="http://stackoverflow.com/questions/4565075/jquery-if-element-has-class-do-this-help-please" class="btn-large btn-primary small-link">Buy Now<a>
              <a href="https://mica.infusionsoft.com/app/manageCart/showManageOrder" class="btn-large btn-primary medium-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary large-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary xl-link">Buy Now<a>

              <% elsif @product.name == "The Albuquerque" %>
              <a href="#" class="btn-large btn-primary no-link">Buy Now<a>
              <a href="http://stackoverflow.com/questions/4565075/jquery-if-element-has-class-do-this-help-please" class="btn-large btn-primary small-link">Buy Now<a>
              <a href="https://mica.infusionsoft.com/app/manageCart/showManageOrder" class="btn-large btn-primary medium-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary large-link">Buy Now<a>
              <a href="<%= @product.shoplink %>" class="btn-large btn-primary xl-link">Buy Now<a>
              <% end %>
            </span>
          </h4>
        </div>

        <div class="color-options">
          <h6>Choose Size*</h6>           
          <ul class="sizes">
            <li class="size small"><a href="#">S</a></li>
            <li class="size medium"><a href="#">M</a></li>
            <li class="size large"><a href="#">L</a></li>
            <li class="size xl"><a href="#">XL</a></li>
          </ul>
        </div>

        <hr>

        <div class="social">
          <h6>Share</h6>
          <ul>
            <ul>
              <a href="#">
                <li><span class="social-icon-facebook pull-left"</span></li>
                <li><h5>Facebook</h5></li>
              </a>
            </ul>
            <ul>
              <a href="#">
                <li><span class="social-icon-twitter pull-left"</span></li>
                <li><h5>Twitter</h5></li>
              </a>
            </ul>
            <ul>
              <a href="">
                <li><span class="social-icon-pinterest pull-left"</span></li>
                <li><h5>Pinterest</h5></li>
              </a>
            </ul>
          </ul>
        </div>
        <% end %>

      </div>

    </div>

  </div>

</div>

<script>
$(document).ready(function() {
  $('#solidPop').popover('hide')

  $('#solidPop').click(function() {
    event.preventDefault();
  });

  $(".small").click(function() {
    event.preventDefault();
    $(".medium").removeClass("active-size")
    $(".large").removeClass("active-size")
    $(".xl").removeClass("active-size")
    $(this).addClass("active-size")
    $(".small-link").show()
    $(".no-link").hide()
    $(".medium-link").hide()
    $(".large-link").hide()
    $(".xl-link").hide()
  });

  $(".medium").click(function() {
    event.preventDefault();
    $(".small").removeClass("active-size")
    $(".large").removeClass("active-size")
    $(".xl").removeClass("active-size")
    $(this).addClass("active-size")
    $(".medium-link").show()
    $(".small-link").hide()
    $(".large-link").hide()
    $(".xl-link").hide()
    $(".no-link").hide()
  });

  $(".large").click(function() {
    event.preventDefault();
    $(".small").removeClass("active-size")
    $(".medium").removeClass("active-size")
    $(".xl").removeClass("active-size")
    $(this).addClass("active-size")
    $(".large-link").show()
    $(".small-link").hide()
    $(".medium-link").hide()
    $(".xl-link").hide()
    $(".no-link").hide()
  });

  $(".xl").click(function() {
    event.preventDefault();
    $(".small").removeClass("active-size")
    $(".medium").removeClass("active-size")
    $(".large").removeClass("active-size")
    $(this).addClass("active-size")
    $(".xl-link").show()
    $(".small-link").hide()
    $(".medium-link").hide()
    $(".large-link").hide()
    $(".no-link").hide()
  });

  $('.store-nav').addClass('active-nav-item');


});

</script>


