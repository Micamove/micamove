<div id="products">
  <div class="container-fluid">

    <%= render(:partial => "product-nav") %>
    <%= render(:partial => "nav-carousel") %>

    <div class="row-fluid">
      <div class="span12">
        <ul class="product-list">
          <% @products.each do |product| %>
          <li class="product-listing">
            <div><%= link_to image_tag(product.image1), product %></div>
            <div class="listing-details"><%= link_to product.name, product %> / <%= link_to product.color, product %></div>
            <div>$<%= link_to (product.price), product %></div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.store-nav').addClass('active-nav-item');
  });
</script>
