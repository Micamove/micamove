<div id="products">
  <div class="container-fluid">

    <%= render(:partial => "product-nav") %>

    <div class="row-fluid carousel-products"> 
      <div class="span12">
        <div id="myCarousel" class="carousel slide">
          <!-- Carousel items -->
          <div class="carousel-inner">
            <div class="active item">
              <img src="assets/product_carousel_deck.jpg"></img>
            </div>
            <div class="item">
              <img src="assets/product_carousel_plank.jpg"></img>
            </div>
            <div class="item">
              <img src="assets/product_carousel_drift.jpg"></img>
            </div>
            <div class="item">
              <img src="assets/product_carousel_baron.jpg"></img>
            </div>
          </div>
          <!-- Carousel nav -->
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <ul class="product-list">
          <% @products.each do |product| %>
          <li class="product-listing">
            <div><%= link_to image_tag(product.image1), product %></div>
            <div><%= link_to product.name, product %> / <%= link_to product.color, product %></div>
            <div>$<%= link_to (product.price), product %></div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
