<% meta_description "Show" %>

<div id="content-container">

  <div class="container-fluid sub-nav-container">
    <%= render(:partial => "team-member-nav") %>
  </div>

  <div class="container-fluid team-masthead">
      <div class="row-fluid">
        <div class="span12">
          <img src="<%= @team_member.masthead_image %>">
        </div>
      </div>
  </div>

  <div class="container-fluid team-bio" style="max-width: 940px">
    <div class="row-fluid">
      <div class="span12">
        <p><%= @team_member.bio %></p>
      </div>
    </div>
  </div>

  <div class="container-fluid video" style="max-width: 940px">
    <div class="row-fluid">
      <div class="span12">
        <h3>Videos</h3>
      </div>
    </div>
    <div class="row-fluid" style="max-width: 940px">
      <div class="span12">
        <iframe src="<%= @team_member.video_embed %>" width="940" height="529" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
      </div>
    </div>
  </div>



</div>


