      $(this).hide()
      $('img[alt="Cale-zima"]').show()
    });

    $('img[alt="Jordan-mendenhall"]').mouseover(function () {
      $(this).hide()
      $('img[alt="Jordan-mendenhall-hover"]').show()
    });
    $('img[alt="Jordan-mendenhall-hover"]').mouseleave(function () {
      $(this).hide()
      $('img[alt="Jordan-mendenhall"]').show()
    });

    var $container = $('.masonry-container');
    $container.imagesLoaded(function(){
      $container.masonry({
        itemSelector : '.team-tile-image',
        columnWidth : 300, 
        gutterWidth : 20, 
        isFitWidth : true
      });
    });

    $('.team-nav').addClass('active-nav-item');

  });
</script>
