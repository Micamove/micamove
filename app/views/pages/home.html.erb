<div id="home-tiles" class="tiled-images">
	<div class="container-fluid images-container">	
		<div class="row-fluid">	
			<div class="span12">
				<div class="masonry-container">
					<div class="home-image">
						<a href="/co-op">
							<img class="co-op-image" src="assets/home-tile-images/co-op.jpg"/>
							<img class="co-op-image-hover" src="assets/home-tile-images/co-op-hover.jpg"/>
						</a>
					</div>
					<div class="home-image">
						<a href="/products">
							<img class="shop-now" src="assets/home-tile-images/shop-now.jpg"/>
							<img class="shop-now-hover" src="assets/home-tile-images/shop-now-hover.jpg"/>
						</a>
					</div>
					<div class="home-image">
						<a href="/visuals/loose-end-ben-fisher">
							<img class="visuals" src="assets/home-tile-images/visuals.jpg"/>
