						</a>
					</div>
					<div class="home-image">
						<a href="http://tumblr.micamove.com/">
							<img class="blog" src="assets/home-tile-images/blog.jpg"/>
							<img class="blog-hover" src="assets/home-tile-images/blog-hover.jpg"/>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%= render(:partial => "sticker-modal") %>

<script>
	$(document).ready(function() {

		$('.tiled-images').fadeIn(1000);


		// hover states for tiled images
		$('.co-op-image').hover(function() {
			$(this).hide(0);
			$(".co-op-image-hover").show();
		});
		$('.co-op-image-hover').mouseleave(function() {
			$(this).hide();
			$(".co-op-image").show();
		});

		$('.featured-product').mouseover(function() {
			$(this).hide();
			$(".featured-product-hover").show();
		});
		$('.featured-product-hover').mouseleave(function() {
			$(this).hide();
			$(".featured-product").show();
		});

		$('.blog').mouseover(function() {
			$(this).hide();
			$(".blog-hover").show();
		});
		$('.blog-hover').mouseleave(function() {
			$(this).hide();
			$(".blog").show();
		});

		$('.featured-product').mouseover(function() {
			$(this).hide();
			$(".featured-product-hover").show();
		});
		$('.featured-product-hover').mouseleave(function() {
			$(this).hide();
			$(".featured-product").show();
		});

		$('.shop-now').mouseover(function() {
			$(this).hide();
			$(".shop-now-hover").show();
		});
		$('.shop-now-hover').mouseleave(function() {
			$(this).hide();
			$(".shop-now").show();
		});

		$('.visuals').mouseover(function() {
			$(this).hide();
			$(".visuals-hover").show();
		});
		$('.visuals-hover').mouseleave(function() {
			$(this).hide();
			$(".visuals").show();
		});

		$('.sticker-pack').mouseover(function() {
			$(this).hide();
			$(".sticker-pack-hover").show();
		});
		$('.sticker-pack-hover').mouseleave(function() {
			$(this).hide();
			$(".sticker-pack").show();
		});

		$('.carousel').carousel({
		  interval: 4000
		})


		var $container = $('.masonry-container');
		$container.imagesLoaded(function(){
		  $container.masonry({
		    itemSelector : '.home-image',
		    columnWidth : 300, 
		    gutterWidth : 20, 
		    isFitWidth : true
		  });
		});

	});
	</script>
