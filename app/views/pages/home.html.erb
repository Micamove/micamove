<div id="tiled-images" class="home-tiles">
	<div class="container-fluid images-container">	
		<div class="row-fluid">	
			<div class="span12">
				<div class="masonry-container">
					<div class="home-image">
						<a href="/team">
							<img class="co-op-image" src="assets/home-tile-images/co-op.jpg"/>
							<img class="co-op-image-hover" src="assets/home-tile-images/co-op-hover.jpg"/>
						</a>
					</div>
					<div class="home-image">
						<a href="/products">
							<img class="shop-now" src="assets/home-tile-images/shop-now.jpg"/>
							<img class="shop-now-hover" src="assets/home-tile-images/shop-now-hover.jpg"/>
						</a>
					</div>
					<div class="home-image">
						<a href="/visuals">
							<img class="image-3" src="assets/home-tile-images/visuals.jpg"/>
						</a>
					</div>
					<div class="home-image">
						<a href="#">
							<img class="image-4" src="assets/home-tile-images/form.png"/>
						</a>
					</div>
					<div class="home-image">
						<a href="/products/186">
							<img class="featured-product" src="assets/home-tile-images/featured-product.jpg"/>
							<img class="featured-product-hover" src="assets/home-tile-images/featured-product-hover.jpg"/>
						</a>
					</div>
					<div class="home-image">
						<a href="http://tumblr.micamove.com/">
							<img class="blog" src="assets/home-tile-images/blog.jpg"/>
							<img class="blog-hover" src="assets/home-tile-images/blog-hover.jpg"/>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


	<script>
	$(document).ready(function() {

		$('.home-tiles').fadeIn(1000);


		// hover states for tiled images
		$('.co-op-image').hover(function() {
			$(this).hide(0);
			$(".co-op-image-hover").fadeIn(1000);
		});
		$('.co-op-image-hover').mouseleave(function() {
			$(this).hide();
			$(".co-op-image").show();
		});

		$('.featured-product').mouseover(function() {
			$(this).hide();
			$(".featured-product-hover").show();
		});
		$('.featured-product-hover').mouseleave(function() {
			$(this).hide();
			$(".featured-product").show();
		});

		$('.blog').mouseover(function() {
			$(this).hide();
			$(".blog-hover").show();
		});
		$('.blog-hover').mouseleave(function() {
			$(this).hide();
			$(".blog").show();
		});

		$('.featured-product').mouseover(function() {
			$(this).hide();
			$(".featured-product-hover").show();
		});
		$('.featured-product-hover').mouseleave(function() {
			$(this).hide();
			$(".featured-product").show();
		});

		$('.shop-now').mouseover(function() {
			$(this).hide();
			$(".shop-now-hover").show();
		});
		$('.shop-now-hover').mouseleave(function() {
			$(this).hide();
			$(".shop-now").show();
		});



		var $container = $('.masonry-container');
		$container.imagesLoaded(function(){
		  $container.masonry({
		    itemSelector : '.home-image',
		    columnWidth : 300, 
		    gutterWidth : 20, 
		    isFitWidth : true
		  });
		});

	});
	</script>
